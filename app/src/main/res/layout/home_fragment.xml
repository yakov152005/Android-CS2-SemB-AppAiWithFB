<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#F5F9FF"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Description"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E3A8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/editDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your description..."
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:minHeight="120dp"
        android:padding="14dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:textColorHint="#888"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />


    <Button
        android:id="@+id/buttonInputStr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Description"
        android:textColor="#FFF"
        android:backgroundTint="#1E40AF"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/editDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />


    <Button
        android:id="@+id/buttonImportStr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Load Description"
        android:textColor="#1E3A8A"
        android:backgroundTint="#E0E7FF"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/buttonInputStr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        />


    <TextView
        android:id="@+id/textString"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your saved description will appear here..."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="16dp"
        android:textColor="#111827"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/buttonImportStr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        />


    <Button
        android:id="@+id/buttonBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#DC2626"
        android:backgroundTint="#FEE2E2"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
